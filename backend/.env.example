# Perpee Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# LLM Configuration (OpenRouter)
# ===========================================
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# Model fallback chain
PRIMARY_MODEL=google/gemini-2.0-flash-exp:free
FALLBACK_MODEL_1=meta-llama/llama-3.3-70b-instruct:free
FALLBACK_MODEL_2=anthropic/claude-3.5-haiku

# ===========================================
# OpenAI (for embeddings)
# ===========================================
OPENAI_API_KEY=sk-your-key-here

# ===========================================
# Email (Resend)
# ===========================================
RESEND_API_KEY=re_your-key-here
USER_EMAIL=user@example.com
FROM_EMAIL=alerts@perpee.app

# ===========================================
# Rate Limits & Guardrails
# ===========================================
DAILY_TOKEN_LIMIT=100000
MAX_SCRAPES_PER_MINUTE=10
MAX_LLM_REQUESTS_PER_MINUTE=30
REQUEST_TIMEOUT_SECONDS=30
OPERATION_TIMEOUT_SECONDS=120

# ===========================================
# Database
# ===========================================
DATABASE_URL=sqlite+aiosqlite:///./data/perpee.db
CHROMADB_PATH=./data/chromadb

# ===========================================
# Application
# ===========================================
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# ===========================================
# Scheduler
# ===========================================
DEFAULT_CHECK_HOUR=6
SCHEDULER_TIMEZONE=UTC
